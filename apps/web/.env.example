# Required for JWT session verification in hooks.server.ts
JWT_SECRET=replace-with-a-32-char-minimum-secret

# Optional session cookie name override
GR_SESSION_COOKIE_NAME=gr_session

# Optional dev proxy target for backend API wiring in `bun dev`.
# Example: GR_API_PROXY_TARGET=http://127.0.0.1:3000
# When set, browser calls to /v1/* are proxied to this target.
GR_API_PROXY_TARGET=

# Hot-path service wiring (API-first by default if unset).
# Set to false only for isolated mock-only frontend runs in local dev/test.
# Production runtime enforces API mode and rejects false toggles.
PUBLIC_GR_USE_API_NOTIFICATIONS=true

# Toggle feed service to call backend /v1/feed API
PUBLIC_GR_USE_API_FEED=true

# Toggle witness chat send/poll to use backend /v1/chat APIs
PUBLIC_GR_USE_API_CHAT=true

# Toggle user profile service to use backend /v1/auth/me + /v1/tandang/* profile endpoints
PUBLIC_GR_USE_API_USER=true

# Toggle triage service to use backend /v1/triage/sessions APIs
PUBLIC_GR_USE_API_TRIAGE=true

# Toggle signal service to use backend /v1/witnesses/:id/signals APIs
PUBLIC_GR_USE_API_SIGNAL=true

# Toggle group service to use backend /v1/groups APIs
PUBLIC_GR_USE_API_GROUP=true
